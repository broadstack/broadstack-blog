source "https://rubygems.org"

# For feed.xml.builder
gem "builder", "~> 3.0"

# Middleman static site generator.j
gem "middleman"

# Blogging model for Middleman.
gem "middleman-blog"

# Deployment to Amazon S3.
# See config.rb, expects AWS_KEY_ID and AWS_SECRET_KEY in ENV.
gem "middleman-s3_sync"

# Syntax highlighting via https://github.com/jayferd/rouge
gem "middleman-syntax"

# You can't Ruby without Pry.
gem "pry"

# Better Markdown, activated in config.rb
gem "redcarpet"
